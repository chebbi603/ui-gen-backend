# Copy to .env and fill real values locally; do NOT commit secrets
MONGO_URL=mongodb+srv://<username>:<password>@<cluster-url>
MONGO_DATABASE_NAME=blog
PORT=8081
JWT_SECRET=change-me
JWT_EXPIRES_IN=1h
RABBITMQ_URL=amqp://localhost
RABBITMQ_TOPIC=app-events

# Optional: enable development seeding (set false in production)
SEED_ENABLED=true

# Redis configuration (choose URL or host/port)
REDIS_URL=redis://localhost:6379
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# LLM provider configuration
# Choose provider: openai | anthropic
LLM_PROVIDER=openai

# OpenAI settings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=

# Anthropic settings
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
# ANTHROPIC_BASE_URL=